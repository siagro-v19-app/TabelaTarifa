<mvc:View controllerName="br.com.idxtecTabelaTarifa.controller.TabelaTarifa"
xmlns:html="http://www.w3.org/1999/xhtml"
xmlns:mvc="sap.ui.core.mvc"
displayBlock="true"
xmlns="sap.m"
height="100%"
width="100%"
xmlns:t="sap.ui.table"
xmlns:fb="sap.ui.comp.filterbar">
	<App id="app">
		<pages>
			<Page showHeader="false">
				<content>
					<VBox class="sapUiSmallMargin">
						<Panel headerText="Tabela Tarifa">
							<fb:FilterBar reset="onReset"
											search="onSearch"
											showRestoreButton="true"
											showClearButton="true"
											filterBarExpanded="false">
											<fb:filterItems>
												<fb:FilterItem name="A" label="Vigente até">
													<fb:control>
														<DatePicker id="vigentefilter" dateValue="" displayFormat="dd.MM.yyyy"
															placeholder="dd.mm.aaaa"/>
													</fb:control>				
												</fb:FilterItem>
											</fb:filterItems>
											<fb:filterGroupItems>
												<fb:FilterGroupItem
													groupName="outrosFiltros"
													groupTitle="Outros filtros"
													name="A"
													label="Descrição"
													labelTooltip="Tooltip GroupItem Example">
													<fb:control>
														<Input id="descricaofilter"/>
													</fb:control>				
												</fb:FilterGroupItem>
											</fb:filterGroupItems>
										</fb:FilterBar>
							<t:Table id="tableTarifa"
								rows="{path: '/TabelaTarifas'}"
								class="sapUiSizeCondensed"
								selectionMode="Single"
								selectionBehavior="Row"
								enableSelectAll="false"
								editable="true"
								visibleRowCountMode="Auto"
								enableBusyIndicator="true"
								alternateRowColors="true"
								enableCustomFilter="false">
								<t:toolbar>
									<Toolbar>
										<Title text="Lista de Tarifas"/>
										<ToolbarSpacer/>
									</Toolbar>
								</t:toolbar>
								<t:columns>
									<t:Column filterProperty="Descricao" sortProperty="Descricao">
										<Label text="Descrição"/>
										<t:template>
											<Text text="{Descricao}"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="TaxaArmazenagem" sortProperty="TaxaArmazenagem">
										<Label text="Taxa de Armazenagem"/>
										<t:template>
										<Text text="{path: 'TaxaArmazenagem',
												type: 'sap.ui.model.odata.type.Single',
				                            		formatOptions:{
				                            			decimals: 2,
				                                		decimalSeparator: ','
				                            		}}"
				                            		wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="VencimentoArmazenagem" sortProperty="VencimentoArmazenagem">
										<Label text="Vencimento de Armazenagem"/>
										<t:template>
											<Text text="{path: 'VencimentoArmazenagem',
												type: 'sap.ui.model.odata.type.Int32'}"
				                            	wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="TaxaExpurgo" sortProperty="TaxaExpurgo">
										<Label text="Taxa de Expurgo"/>
										<t:template>
											<Text text="{path: 'TaxaExpurgo',
												type: 'sap.ui.model.odata.type.Single',
				                            		formatOptions:{
				                            			decimals: 2,
				                                		decimalSeparator: ','
				                            		}}"
				                            		wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="VencimentoExpurgo" sortProperty="VencimentoExpurgo">
										<Label text="Vencimento de Expurgo"/>
										<t:template>
											<Text text="{path: 'VencimentoExpurgo',
												type: 'sap.ui.model.odata.type.Int32'}"
				                            	wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="Carencia" sortProperty="Carencia">
										<Label text="Carência"/>
										<t:template>
											<Text text="{path: 'Carencia',
												type: 'sap.ui.model.odata.type.Int32'}"
				                            	wrapping="false"/>
										</t:template>
									</t:Column>
									<t:Column filterProperty="VigenteAte" sortProperty="VigenteAte">
										<Label text="Vigente até"/>
										<t:template>
											<Text text="{
												path : 'VigenteAte',
												type : 'sap.ui.model.type.Date',
												formatOptions: {
													style : 'short'
												}}"
												wrapping="false"/>
										</t:template>
									</t:Column>
								</t:columns>
								<t:footer>
									<Toolbar>
										<Button icon="sap-icon://refresh" press="onRefresh"/>
										<ToolbarSpacer/>
										<Button icon="sap-icon://filter"/>
										<Button icon="sap-icon://clear-filter"/>
									</Toolbar>
								</t:footer>
							</t:Table>
						</Panel>
					</VBox>
				</content>
				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button icon="sap-icon://add" text="Incluir novo" press="onIncluir"/>
						<Button icon="sap-icon://edit" text="Editar" press="onEditar"/>
						<Button icon="sap-icon://delete" text="Remover" press="onRemover"/>
					</Toolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>